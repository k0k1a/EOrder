page{
    width: 100%;
    height: 100%;
}
.float-left{
    float: left;
}
.float-right{
    float: right;
}
.color-red{
    color: red;
}
.order-info-container{
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    overflow: hidden;
}
.card{
    margin:0 0 20rpx 0;
    padding: 10rpx 20rpx;
    width: 100%;
    background-color: #ffffff;
}
.order-title-item{
    margin: 0 0 20rpx 0;
    font-size: 30rpx;

}
.order-goods-items{
    overflow: hidden;
}
.order-goods-items .selectCoupon-title{ 
    float: left;
    font-size: 28rpx;
}
.red{
    color: red;
}
.order-goods-items .selectCoupon{
    font-size: 28rpx;
    /* color: red; */
    float: right;
}
.order-goods-item{
    margin: 10rpx 0;
    width: auto;
    /* height: 200rpx; */
}
.order-goods-desc{
    display: flex;
}
.order-goods-desc .desc-item{
    font-size: 28rpx;
    text-align: left;
}
.order-goods-desc .goods-name{
    flex: 8;
}
.order-goods-desc .goods-num{
    flex: 1;
}
.order-goods-desc .goods-price{
    flex: 1;
}
.order-goods-option{
    font-size: 23rpx;
    color: #888888;
}
.order-total{
    margin: 25rpx 0;
    width: auto;
    height: 50rpx;
    font-size: 30rpx;
    text-align: right;
}
.order-remark{
    margin: 10rpx 0;
    font-size: 30rpx;
    display: flex;
}
.order-remark .remark-title{
    flex: 5;
}
.order-remark .remark-input{
    flex: 2;
    text-align: right;
}

/* 支付bar */
.buy-bar{
    position: fixed;
    left: 0;
    bottom: 0;
    padding: 10rpx 25rpx;
    width: 100%;
    height: 120rpx;
    background-color: #ffffff;
    overflow: hidden;
}
.buy-bar .total{
    margin: 0 40rpx 0 10rpx;
    width: 400rpx;
    height: 100rpx;
    font-size: 35rpx;
    text-align: right;
    line-height: 100rpx;
}
.buy-bar .buy-btn{
    width: 250rpx;
    height: 100rpx;
    font-size: 35rpx;
    color: #ffffff;
    /* font-weight:550; */
    text-align: center;
    line-height: 100rpx;
    background-color: red;
    border-radius: 50rpx;
}

/* 联系电话条 */
.cart-bar{
    margin: 20rpx 0;
    overflow: hidden;
}
.cart-bar .title{
    width: auto;
    height: 50rpx;
    font-size: 30rpx;
    line-height: 40rpx;
}
.cart-bar .select{
    width: auto;
    height: 40rpx;
    color: #888888;
    font-size: 28rpx;
    line-height: 40rpx;
}
.cart-bar .input{
    width: auto;
    height: 50rpx;
    overflow: hidden;
}
.input .phone{
    margin: 0 10rpx;
    width: 200rpx;
    height: 50rpx;
    color: #888888;
    font-size: 30rpx;
}
.input .re-input{
    padding: 0;
    width: 150rpx;
    height: 50rpx;
    color: #ffffff;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 50rpx;
    text-align: center;
    background-color: red;
    border-radius: 25rpx;
}

.coupon-info{
    width: 100%;
    height: 800rpx;
    background-color: #f5f5f5;
    position: fixed;
    bottom: 0;
    z-index: 2000;
}
.mask-layer{
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.6);
    position: fixed;
    top: 0;
    z-index: 1000;
}

/* coupon */
.order-bar{
    height: 100rpx;
    display: flex;
    background-color: #ffffff;
}
.order-bar .order-title{
    flex: 1;
}
.order-title .order-title-text{
    margin: 0 auto;
    width: 80%;
    height: 90rpx;
    text-align: center;
    font-size: 35rpx;
    line-height: 100rpx;
    /* border: 1rpx solid black; */
}
.order-title .select-bar{
    width: 50rpx;
    height: 10rpx;
    background-color: var(--themeColor);
    border-radius: 5rpx;
    position: relative;
    top: 0;
    left: 100rpx;
}


