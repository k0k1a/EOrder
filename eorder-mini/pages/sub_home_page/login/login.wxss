page{
    width: 100%;
    height: 100%;
}
.container{
    width: auto;
    height: 100%;
}
.input{
    width: 700rpx;
    height: 300rpx;
    position: fixed;
    top: 400rpx;
    left: 25rpx;
}
.wx-login{
    margin: 0 auto;
    width: 300px;
    height: 40px;
    background-color: var(--themeColor);
    border-radius: 5px;
    font-size: 20px;
    text-align: center;
    line-height: 40px;
    color: #ffffff;
}

.system-login{
    margin: 5px auto;
    width: 300px;
    text-align: center;
    font-size: 14px;
    color: rgb(30, 30, 197);
}
.permit{
    width: 700rpx;
    height: 30px;
    position: fixed;
    bottom: 50px;
    left: 25rpx;
}
.select{
    margin: 0 auto;
    width: 500rpx;
    height: 20px;
    /* font-size: 14px; */
    color: #888888;
}
