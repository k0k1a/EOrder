    width: 320rpx;
    height: 60rpx;
    background-color: rgba(0, 0, 0, 0.7);
    font-size: 27rpx;
    color: #ffffff;
    text-align: center;
    line-height: 60rpx;
    position: fixed;
    top: 450rpx;
    left: 215rpx;
}